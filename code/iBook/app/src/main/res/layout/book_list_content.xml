<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/listBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Book Title"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listBookAuthors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author(s): Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listBookTitle"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/listBookDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 2020/10/10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listBookAuthors"/>

    <TextView
        android:id="@+id/listBookDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: xxxxxxxxx xxxx xxx xx xxxxxxxx..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listBookDate"/>

    <TextView
        android:id="@+id/listBookStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Available"
        android:textColor="#1E9F01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listBookDescription" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="128dp"
        android:layout_height="97dp"
        app:layout_constraintBottom_toBottomOf="@+id/listBookStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />


</androidx.constraintlayout.widget.ConstraintLayout>